	public void loadtable() {
		DefaultTableModel model = (DefaultTableModel) tblCustomer.getModel();
		model.setRowCount(0);
		try {
			List<Customer> lst = cusDao.selectAll();
			for(Customer c : lst) {
				Object[] row = {
						c.getCustomerId(),
						c.getCustomerName()
				};
				model.addRow(row);
			}
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
}


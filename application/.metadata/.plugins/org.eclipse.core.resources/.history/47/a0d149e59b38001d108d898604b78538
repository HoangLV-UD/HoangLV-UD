    private void btnGuimaActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnGuimaActionPerformed
//        String email = txtEmail.getText();      
//        nhanvien = nvDao.selectByEmail(email);
//        System.out.println(email);
//        if(nhanvien != null){
//            Random rd = new Random();
//            verifycode = String.format("%06d", rd.nextInt(999999));
//            try {
//                EmailHelper.sendVerifyCode(nhanvien.getEmail(), verifycode);
//            } catch (Exception e) {
//                MsgBox.alert(null, "Có lỗi xảy ra, hãy thử lại sau");
//                e.printStackTrace();
//                return;
//            }
//        }
//        txtEmail.setEnabled(false);
//        btnGuima.setEnabled(false);
//        txtMaXacNhan.setEnabled(true);
//        btnXacminh.setEnabled(false);
        nhanvien = nvDao.selectByEmail(txtEmail.getText());
        try {
            btnGuima.setEnabled(true);
            btnXacNhan.setEnabled(true);
            Properties p = new Properties();
            p.put("mail.smtp.auth", "true");
            p.put("mail.smtp.starttls.enable", "true");
            p.put("mail.smtp.host", "smtp.gmail.com");
            p.put("mail.smtp.port", 587);
            // Ä‘Äƒng nháº­p vÃ o email Ä‘Ã³;
            String username = "chungntph13390@fpt.edu.vn";
            String password = "Chung0809";
            Session s = Session.getInstance(p,
                    new javax.mail.Authenticator() {
                protected javax.mail.PasswordAuthentication getPasswordAuthentication() {
                    return new javax.mail.PasswordAuthentication(username, password);
                }
            });
            // gá»­i mÃ£ vá»� maill;
            String from = username;
            
            Random rd = new Random();
            verifycode = String.format("%06d", rd.nextInt(999999));
            String tittle = "quên mật khẩu";
            //
            Message msg = new MimeMessage(s);
            msg.setFrom(new InternetAddress(from));
            msg.setRecipients(Message.RecipientType.TO, InternetAddress.parse(txtEmail.getText()));
            msg.setSubject(tittle);
            msg.setText("Mã xác nhận của bạn là :" + verifycode);
            Transport.send(msg);
            JOptionPane.showMessageDialog(this, "hãy kiểm tra email");
        } catch (Exception e) {
            e.printStackTrace();
        }

    }//GEN-LAST:event_btnGuimaActionPerformed

    private void btnXacNhanActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnXacNhanActionPerformed
        String newPass = txtmkMoi.getText();
        String confimPass = txtXacnhanMK.getText();
        if (newPass.equals(confimPass)) {
            nhanvien.setMaNv(newPass);
            nvDao.update_pass(nhanvien);
            Auth.setUser(nhanvien);
            MsgBox.alert(this, "Cập nhật mật khẩu mới thành công");
            this.dispose();
        } else {
            MsgBox.alert(this, "Nhập lại mật khẩu mới không chính xác !");
            txtXacnhanMK.requestFocus();
        }
    }//GEN-LAST:event_btnXacNhanActionPerformed

    private void btnXacminhActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnXacminhActionPerformed
        if (verifycode.equals(txtMaXacNhan.getText())) {
            txtMaXacNhan.setEnabled(false);
            btnXacminh.setEnabled(false);
            txtmkMoi.setEditable(true);
            txtXacnhanMK.setEditable(true);
        } else {
            MsgBox.alert(this, "Mã xác minh không chính xác");
        }
    }//GEN-LAST:event_btnXacminhActionPerformed

